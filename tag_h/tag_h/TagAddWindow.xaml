<Window x:Class="tag_h.TagAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tag_h"
        mc:Ignorable="d"
        Title="TagAddWindow" Height="70" Width="490">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Add tag:" 
               HorizontalAlignment="Left" VerticalAlignment="Center"
               Grid.Column="0"/>
        <TextBox x:Name="TagNameBox" Grid.Column="1" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Center"
                 Height="23" TextWrapping="Wrap" Text=""/>
        <Button x:Name="AddButton"
                Grid.Column="3" Content="Add"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Click="AddButton_Click"/>
        <Button x:Name="CancelButton"
                Grid.Column="4" Content="Cancel" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Click="CancelButton_Click"/>
    </Grid>
</Window>
